<h1>Editar tarefa</h1>
<form class="form" action="/tasks/update" method="POST">
    {{#with task}}
        <input type="hidden" name="id" value="{{id}}">
        <div class="form-control">
            <label class="form__label" for="title">Titulo:</label>
            <input class="form__input" type="text" name="title" placeholder="Digite o título da tarefa" value="{{title}}">
        </div>
        <div class="form-control">
            <label class="form__label" for="description">Descrição:</label>
            <input class="form__input" type="text" name="description" placeholder="Digite a descrição" value="{{description}}">
        </div>
        <input class="form__submit" type="submit" value="Atualizar">
    {{/with}}
</form>