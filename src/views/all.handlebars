<h1>Todas as tarefas</h1>

<section class="container">
    {{#each tasks}}
        <ul>
        {{#with this}}
            {{#if done}}
            <li class="task done">
                <p class="title"><strong>Título</strong></p>
                <p class="task__title">{{title}}
                </p>
                <div class="task__options">
                    <a class="option__link" href="/tasks/done/{{id}}"><i class="bi bi-check2"></i></a>
                    <a class="option__link" href="/tasks/update/{{id}}"><i class="bi bi-pencil-square"></i></a>
                    <form action="/tasks/remove" method="POST">
                        <input type="hidden" name="id" value="{{id}}">
                        <button class="option__link" type="submit" onclick="return confirm('Tem certeza que deseja excluir a tarefa {{title}}?')">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </form>
                </div>
            {{else}}
                <li class="task">
                    <p><strong>Título</strong></p>
                    <p class="task__title">{{title}}</p>
                    <div class="task__options">
                        <a class="option__link" href="/tasks/done/{{id}}"><i class="bi bi-check2"></i></a>
                        <a class="option__link" href="/tasks/update/{{id}}"><i class="bi bi-pencil-square"></i></a>
                        <form action="/tasks/remove" method="POST">
                            <input type="hidden" name="id" value="{{id}}">
                            <button class="option__link" type="submit" onclick="return confirm('Tem certeza que deseja excluir a tarefa {{title}}?')">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </form>
                    </div>

            {{/if}}


           </li>
        {{/with}}
        </ul>
    {{/each}}
</section>